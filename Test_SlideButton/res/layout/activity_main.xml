<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/hello_world" />
    
<!--     <LinearLayout  -->
<!--         android:layout_width="wrap_content" -->
<!--         android:layout_height="wrap_content" -->
<!--         android:orientation="horizontal"> -->
<!--     <TextView -->
<!--         android:layout_width="wrap_content" -->
<!--         android:layout_height="wrap_content" -->
<!--         android:text="@string/seeking_bar" /> -->
        
    <SeekBar
        android:id="@+id/switch_captrue_change_btn"
        android:layout_height="wrap_content"
        android:layout_width="226px"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:maxHeight="80px"
        android:minHeight="80px"
        android:progressDrawable="@drawable/generic_switch_l"
        android:scrollbarStyle="insideOverlay"
        android:secondaryProgress="0"
        android:thumb="@drawable/generic_switch_btn"
        android:max="1"
        android:thumbOffset="1dip"
        />
<!--     </LinearLayout> -->
    
    <ImageView
    	android:id="@+id/slide_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/generic_switch1"
        android:layout_below="@id/switch_captrue_change_btn"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        />
        
    <com.zdf.test_slidebutton.SlideButton 
        android:id="@+id/slide_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slide_view"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        />
        
</RelativeLayout>